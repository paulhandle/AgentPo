# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
BOT_NAME=AICustomerServiceBot
ALLOWED_GROUP_IDS=
ADMIN_USER_IDS=

# Bot Specialty Configuration
BOT_SPECIALTY=customer_service
BOT_SPECIALTY_DESCRIPTION="I am a customer service expert specializing in technical support and product inquiries."

# Active AI Model
ACTIVE_MODEL=openai  # or claude

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=500

# Claude Configuration
CLAUDE_API_KEY=your_claude_api_key
CLAUDE_MODEL=claude-2
CLAUDE_TEMPERATURE=0.7
CLAUDE_MAX_TOKENS=500

# Proxy Configuration
USE_PROXY=true
HTTP_PROXY=http://127.0.0.1:8118
HTTPS_PROXY=http://127.0.0.1:8118
